#!/usr/bin/env bash

#
# dot_update
#
# `dot_update` handles installation, updates, things like that. Run it periodically
# to make sure you're on the latest and greatest.

parentDirectory="$(cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd -P)"
dotfilesDirectory="$(cd "$( dirname "$parentDirectory" )" && pwd -P)"
SCRIPTS=$dotfilesDirectory/script

# TODO: Add options to this script to run in update or full symlink mode
source $SCRIPTS/bootstrap.sh -u
