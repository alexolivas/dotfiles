# ######################################
# STAGE bastion
# ######################################

Host 172.31.*.*
    User rightscale
    IdentityFile ~/.ssh/hobsons_right_scale_rsa
    ProxyCommand  ssh -W %h:%p rightscale@bastion.dev.starfishsolutions.com
    StrictHostKeyChecking no
    UserKnownHostsFile=/dev/null


# ######################################
# ORE bastion
# ######################################

Host 172.30.*.*
    User rightscale
    IdentityFile ~/.ssh/hobsons_right_scale_rsa
    ProxyCommand  ssh -W %h:%p rightscale@bastion.ore.starfishsolutions.com
    StrictHostKeyChecking no
    UserKnownHostsFile=/dev/null


# ######################################
# IRL bastion
# ######################################

Host 172.32.*.*
    User rightscale
    IdentityFile ~/.ssh/hobsons_right_scale_rsa
    ProxyCommand  ssh -W %h:%p aolivas@bastion.irl.starfishsolutions.com
    StrictHostKeyChecking no
    UserKnownHostsFile=/dev/null


