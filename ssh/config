# ==============================================================================================
# ============================== Web Faction CONFIGS ===========================================
# ==============================================================================================

Host sandbox1.webfaction
    User sandbox1
    IdentityFile ~/.ssh/webfaction_dsa
    ProxyCommand ssh -W %h:%p sandbox1@sandbox1.webfactional.com

Host oaolivas.webfaction
    User oaolivas
    IdentityFile ~/.ssh/webfaction_dsa
    ProxyCommand ssh -W %h:%p oaolivas@oaolivas.webfactional.com


